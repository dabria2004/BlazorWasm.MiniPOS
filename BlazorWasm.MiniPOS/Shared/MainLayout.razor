@inherits LayoutComponentBase
<MudAppBar Elevation="0" Dense="@dense" Style="@($"background:{Theme.Palette.Dark};")">
    <MudText Typo="Typo.h6" Class="px-4">
        <NavLink href="/" class="text-white">
        Mini POS
        </NavLink>
    </MudText>
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
    <MudSpacer />
    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor" Target="_blank" />
</MudAppBar>
<MudLayout Class="mt-16">
    <MudDrawer @bind-Open="@open" Elevation="0" Variant="@DrawerVariant.Persistent">
        @*<MudDrawerHeader>
        <MudText Typo="Typo.h6">My App</MudText>
        </MudDrawerHeader>*@
        <MudNavMenu Rounded="true" Color="Color.Primary" Class="mud-width-full">
            @*<MudText Typo="Typo.h6" Class="px-4">Mini POS</MudText>
            <MudText Typo="Typo.body2" Class="px-4">Blazor Wasm</MudText>
            <MudDivider Class="my-3" />*@
            <MudNavGroup Title="Product" Icon="@Icons.Material.Filled.Settings" Expanded="true">
                <MudNavLink Href="/setup/product" Icon="@Icons.Material.Filled.People" IconColor="Color.Inherit">New Product</MudNavLink>
                <MudNavLink Href="/setup/product-category" Icon="@Icons.Material.Filled.Security" IconColor="Color.Inherit">Product Category</MudNavLink>
            </MudNavGroup>
            @* <MudNavLink Href="/SaleReport" Icon="@Icons.Material.Filled.Storage" IconColor="Color.Inherit">Sale Report</MudNavLink> *@
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-3">
        <MudContainer Fixed="true">
            @Body
        </MudContainer>
        @*<MudContainer Class="mt-6">
        @Body
        </MudContainer>*@
    </MudMainContent>
</MudLayout>
@code {
    private MudTheme Theme = new MudTheme();
    bool open = true;
    bool dense = false;
    bool preserveOpenState = false;
    Breakpoint breakpoint = Breakpoint.Lg;
    DrawerClipMode clipMode = DrawerClipMode.Never;

    void ToggleDrawer()
    {
        open = !open;
    }
}